<h3>Travellers Information</h3>
<table class=table table-stripped.table-hover>
		<thead>
			<tr>
				<th>Name of Passenger</th>
				<th>No. of Travellers</th>
				<th>No of Child</th>
				<th>Time of Travel</th>
				<th>Date of Travel</th>
				<th colspan ='3'></th>
			</tr>
		</thead>
		<tbody>
			<% @bookings.each do |booking|%>
			<tr>
				<td><%= booking.name_of_passenger%></td>
				<td><%= booking.no_of_travellers%></td>
				<td><%= booking.no_of_child%></td>
				<td><%= booking.time_of_travel%></td>
				<td><%= booking.date_of_travel%></td>
				<%= link_to 'Back', fares_path%>
			</tr>
			<%end%>
		</tbody>
	</table>